<div class="roundedTitle"><span>人気タグ</span></div>
<div class="roundedContent">
<p class="tag_cloud clearfix">
  <% Article.cloud(@tagged_items, (8..36).to_a) do |tag_name, cloud_size| -%>
    <%= link_to(h(tag_name), tag_item_url(:query => tag_name), {:style => "font-size: #{cloud_size}px;", :class => "popular_tag"}) -%>
  <% end -%>
</p>
</div>
