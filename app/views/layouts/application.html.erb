<!DOCTYPE html>
<%= content_tag(:html, :lang => "ja") do %>
  <%= content_tag(:head) do %>
    <%= tag(:meta, "charset" => "UTF-8") %>
    <%= csrf_meta_tag %>
    <%= favicon_link_tag(asset_path("favicon.ico")) %>
    <%= stylesheet_link_tag("application") %>
    <%= content_tag(:title, html_title) %>
  <% end %>
  <%= content_tag(:body) do %>
    <%= content_tag(:div, :class => "topbar", "data-scrollspy" => "scrollspy", "data-dropdown" => "dropdown") do %>
      <%= content_tag(:div, :class => "fill") do %>
        <%= content_tag(:div, :class => "container") do %>
          <%= link_to(AppConfig[:app_name], :root, :class => "brand") %>
          <%= content_tag(:ul, :class => "nav") do %>
            <%= link_to(Article.human_attribute_name(:new), [:new, :article]) %>
            <%#== topbar_nav %>
            <% if false %>
              <%= content_tag(:li, :class => "dropdown") do %>
                <%= link_to("その他", "#", :class => "dropdown-toggle") %>
                <%= content_tag(:ul, :class => "dropdown-menu") do %>
                  <%= content_tag(:li, link_to("＠ほぉ～むcafe", "http://www.cafe-athome.com/", :target => "_blank")) %>
                  <%= content_tag(:li, link_to("ニコニコ動画", "http://www.nicovideo.jp/tag/%40%E3%81%BB%E3%81%89%EF%BD%9E%E3%82%80cafe?sort=f", :target => "_blank")) %>
                <% end %>
              <% end %>
            <% end %>
          <%- end -%>
          <%= form_tag(:articles, :method => :get, :class => "pull-right") do %>
            <%= search_field_tag :query, params[:query], :placeholder => "検索" %>
          <% end %>
        <% end -%>
      <% end -%>
    <% end -%>
    <%= content_tag(:div, :class => "container") do %>
      <%= yield %>
    <% end %>
    <%= content_tag(:footer, :class => "footer") do %>
      <%= content_tag(:div, :class => "container") do %>
        <% if false %>
          <%= content_tag(:p, :class => "pull-right") do %>
            <%= link_to("上まで戻る", "#") %>
          <% end %>
        <% end %>
        <%= content_tag(:p) do %>
          <%#= link_to("＠ほぉ～むcafe", "http://www.cafe-athome.com/", :target => "_blank") %>
          <%= "Powered by Rails #{Rails.version} and Ruby #{RUBY_VERSION}" %>
        <% end %>
      <% end %>
    <% end %>

    <%= javascript_include_tag("application.js") %>
    <% if false %>
      <script src="<%= config.relative_url_root %>/jme/packages/mm.embed.min.js" type="text/javascript"></script>
    <% end %>
  <% end %>
<% end %>
