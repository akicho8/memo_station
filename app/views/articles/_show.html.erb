<%= content_tag(:section) do %>
  <%= content_tag(:div, :class => "page-header") do %>
    <%= content_tag(:h2) do %>
      <%= link_to(article.title, article) %>
    <% end %>
  <% end %>
  <%= content_tag(:p, article_body(article.body)) %>
  <%= content_tag(:div, :class => "pull-right") do %>
    <%= article.created_at.to_date %>
    <%= article_tag_list(article.tag_list) %>
    <%= link_to article.class.human_attribute_name(:edit), [:edit, article], :class => "label notice" %>
    <%= link_to article.class.human_attribute_name(:destroy), article, :confirm => "本当に削除しますか？", :method => :delete, :class => "label warning" %>
  <% end %>
<% end %>
